[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # 空格在 : 前
    W503,  # 运算符换行前
    E501,  # 行太长（由black处理）
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .vscode,
    venv,
    migrations
per-file-ignores =
    __init__.py: F401
    tests/*: S101
    src/database/models.py: F401
ignore = 
    W504,
    B008,
    B905
